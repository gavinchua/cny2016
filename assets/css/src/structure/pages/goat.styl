		.caption
			bottom 70px
			
	.scene2
		background url(img-folder zodiac "bg-scene2.svg") center 0 no-repeat
		background-size cover
		position relative
		top -200px
		z-index 4
		
		.goatsatwork-wrapper
			margin 0 auto
			padding-top 20%
			//width 90%
			
			@media (min-width: width-tabletlandscape)
				padding-top 5%
				
			.display-table-row
				position absolute
				
				&.bottom
					top 35%
					
					@media (min-width: width-tabletlandscape)
						top 45%
						
					.desk
						z-index 4!important
						
					.goatsatwork
						z-index 3!important
						
				.display-table-cell
					//padding 40px
					position relative
					width 50%
					
					.desk
						background url(img-folder zodiac "goatsatwork-desk-scene2.svg") center center no-repeat
						background-size contain
						height 100%
						margin 0 auto
						position relative
						z-index 2
						
					.goatsatwork
						background url(img-folder zodiac "goatsatwork-goat-scene2.svg") center center no-repeat
						background-size contain
						height 100%
						left 50%
						margin 0 auto
						position absolute
						top 0
						z-index 1
						
		.clock
			background url(img-folder zodiac "clock-scene2.svg") 0 0 no-repeat
			background-size contain
			//height 118px
			margin 0 auto
			position relative
			//width 118px
			
			.hour
				background url(img-folder zodiac "clock-hour-scene2.svg") 0 0 no-repeat
				background-size contain
				//height 118px
				margin 0 auto
				position absolute
				//width 118px
				
			.min
				background url(img-folder zodiac "clock-min-scene2.svg") 0 0 no-repeat
				background-size contain
				//height 118px
				margin 0 auto
				position absolute
				//width 118px
				
		.clock,
		.hour,
		.min
			height 50px
			width 50px
			
			@media (min-width: width-tabletportrait)
				height 118px
				width 118px
				
		.caption
			bottom 50px
			
