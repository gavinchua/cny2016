	.caption
		position absolute
		text-align center
		width 100%
		z-index 6
		
		p
			background rgba(0, 0, 0, 0.7)
			font-size 15px
			display inline-block
			margin 0 auto
			padding 10px 20px
			width 90%
			
			@media (min-width: width-tabletportrait)
				font-size 24px
				
			@media (min-width: width-tabletlandscape)
				font-size 30px
				width auto
				
	.scene1
		//background url(img-folder zodiac "bg-scene1.svg") center 0 no-repeat
		//background-size cover
		background #63c8ce
		position relative
		z-index 3
		
		.drinks-wrapper
			left 50%
			margin-left -140px
			opacity 0
			position absolute
			top 100px
			//width 90%
			width 280px
			z-index 3
			
			@media (min-width: width-tabletportrait)
				margin-left -330px
				width 660px
				
			@media (min-width: width-tabletlandscape)
				margin-left -430px
				width 860px
				
			@media (min-width: width-desktop)
				margin-left -550px
				width 1100px
				
			> div
				background url(img-folder zodiac "drinks-scene1.svg") 0 0 no-repeat
				background-size contain
				//height 234px
				height 34px
				position relative
				//width 312px
				width 45px
				
				@media (min-width: width-tabletportrait)
					height 75px
					width 100px
					
				@media (min-width: width-tabletlandscape)
					height 113px
					width 150px
					
				@media (min-width: width-desktop)
					height 150px
					width 200px
					
		.character
			background url(img-folder zodiac "character-scene1.svg") center center no-repeat
			background-size contain
			height 139px
			margin 0 auto
			opacity 0
			position relative
			//top -76.8%
			top 26%
			width 130px
			
			@media (min-width: width-tabletportrait)
				height 329px
				top 30%
				width 310px
				
			@media (min-width: width-tabletlandscape)
				height 403px
				top 26%
				width 380px
				
			@media (min-width: width-desktop)
				height 499px
				top 26%
				width 470px
				
