@import "../style.styl";

//
// Footer
// --------------------------------------------------

footer
	background site-grey
	bottom 0
	font-size 10px
	height 15%
	padding 0 10px
	position absolute
	text-transform uppercase
	width 100%
	z-index 1
	
	@media (min-width: width-tabletportrait)
		font-size 12px
		height 25%
		padding 0 30px
		
	@media (min-width: width-tabletlandscape)
		height 45%
		
	> div
		display table
		height 100%
		//height 30%
		
		div
			display table-cell
			//height 400px
			padding-bottom 10px
			vertical-align bottom
			
			@media (min-width: width-tabletportrait)
				padding-bottom 20px
				
			&.logo
				a
					background url(img-folder "logo.svg") 0 bottom no-repeat
					background-size contain
					display block
					height 23px
					width 72px
					
					@media (min-width: width-tabletportrait)
						height 43px
						width 134px